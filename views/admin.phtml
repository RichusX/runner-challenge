use App\Models\TeamModel;
use App\Models\UserModel;

/**
 * @var TeamModel[] $teams
 * @var UserModel[] $users
 */

/**
 * @param TeamModel $team
 * @return UserModel[]
 */
$findUsers = function (TeamModel $team) use (&$users) {
    return array_filter($users, function (UserModel $user) use ($team) {
        return $user->teamId == $team->id;
    });
};

